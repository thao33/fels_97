<section>
  <%= form_for [:admin, @lesson] do |f| %>
    <%= f.select :category_id,
        options_from_collection_for_select(Category.all, "id", "name", @lesson.category_id) %>
    <div class="row">
      <p class="col-md-2 col-md-offset-3">
        <%= link_to t("admin.button.back_to_show"), admin_lesson_path(@lesson), class: "btn btn-info" %>
      </p>
      <p class="col-md-2">
        <%= submit_tag t("admin.button.update") , class: "btn btn-primary" %>
      </p>
    </div>
  <% end %>
</section>