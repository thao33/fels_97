<div class="row" id="words">
  <ul class="col-md-3 col-md-offset-3">
    <% @word_group1.each do |word| %>
      <li>
        <div class="col-md-6"><%= word.ja %></div>
        <div class="col-md-6"><%= word.vn %></div>
      </li>
    <% end %>
  </ul>
  <ul class="col-md-3">
    <% @word_group2.each do |word| %>
      <li>
        <div class="col-md-6"><%= word.ja %></div>
        <div class="col-md-6"><%= word.vn %></div>
      </li>
    <% end %>
  </ul>
  <%= will_paginate(@words) %>
</div>